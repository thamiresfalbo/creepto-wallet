<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: 2) %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= MiningType.human_attribute_name(:description) %></th>
      <th><%= MiningType.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('links.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new'), new_mining_type_path, class:"btn btn-primary"%>
